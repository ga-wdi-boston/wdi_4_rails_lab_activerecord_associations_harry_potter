<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @professor.first_name + " " + @professor.last_name %>
</p>

<p>
  <strong>Image:</strong>
  <%= @professor.image %>
</p>

<p>
  <strong>Spells:</strong></br>
  <% @professor.professor_skills.each do |skill| %>
  <% @spellid = skill.spell_id %>
  <%= Spell.find(@spellid).name %>,
  Level: <%= link_to skill.level, edit_professor_skill_path(skill.id) %></br>
  <% end %>
  <%= link_to 'New Professor Skill', new_professor_skill_path %>
</p>

<%= link_to 'Edit', edit_professor_path(@professor) %> |
<%= link_to 'Back', professors_path %>
