<h1>Hogwarts Lecture</h1>
<h2><%= link_to "See Students", students_url %> </h2>
<h2><%= link_to "See Professors", professors_url %> </h2>
<div class="lecture">
	<h2><%= @lecture.topic %></h2>
	<h3><%@lecture.weekday%></h3>
	<div class='professors_lectures'>
		<%= link_to @lecture.professor.name, @lecture.professor %>
	</div>

<div class="student-roster">
<% if @lecture.students != nil %>
	<ol>Student Roster:
		<% @lecture.students.each do |student| %>
		<li><%=student.name %></li>
	</ol>
		<% end %>
		<%else%>
		<%= "No students" %>
		<%end%>
</div>


	<%= link_to "back to lectures", lectures_url %>
</div>