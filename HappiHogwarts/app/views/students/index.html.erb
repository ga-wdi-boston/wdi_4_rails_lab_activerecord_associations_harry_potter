<h1>Hogwarts Students</h1>
<h3><%= link_to "See Professors", professors_url %></h3>
<h3><%= link_to "Add new student", new_student_url %> </h3>
<div class="students">
	<%@students.each do |student| %>
	<ul>
	<div class='house_students'>
		<li><%= link_to student.name, student %>
        <li><%= link_to 'Edit', edit_student_path(student) %></li>
        <li><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></li>
		</ul>
		<%end%>
	</div>
</div>