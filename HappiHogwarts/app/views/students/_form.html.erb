<%= form_for(@student) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

 <div class="field">
    <%= f.label :house %>
    <%=collection_select(:student, :house_id, House.all, :id, :name, prompt: true)%>
  </div>

  <div class="field">
    <%= f.label :lecture %>
    <%=collection_check_boxes(:student, :lecture_ids, Lecture.all, :id, :topic, prompt: true)%>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
